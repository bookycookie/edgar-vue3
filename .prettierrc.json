{
	"arrowParens": "always",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"bracketSameLine": true,
	"printWidth": 120,
	"proseWrap": "never",
	"quoteProps": "as-needed",
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"htmlWhitespaceSensitivity": "ignore"
}
